IF
  InParty(Myself)
  Global("XPBalance","LOCALS",0)
  XPGT(Player1,500000)
  XPLT(Player1,1000000)
THEN
  RESPONSE #100
    SetGlobal("XPBalance","LOCALS",1)
    AddXPObject(Myself,500000)
END

